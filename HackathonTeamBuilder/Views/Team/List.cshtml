@model List<HackathonTeamBuilder.Models.TeamViewModel>
@{
    ViewBag.Title = "List";
    HackathonTeamBuilder.Models.Hackathon hackathon = null;
    if (Model.Count > 0 && Model[0] != null)
    {
        hackathon = Model[0].Team.Hackathon;
    }

}

@if (Model.Count > 0)
{
    <h2>Hackathon: @hackathon.Name (ID: @hackathon.Id)</h2>

    <h3>Team List:</h3>
    <a href="/Team/Create?hackathonId=@hackathon.Id" class="btn btn-primary mb-2">Create A Team</a>
    <div class="row">
        @foreach (var teamViewModel in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Team ID: @teamViewModel.Team.Id</h5>
                        <p class="card-text"><strong>Team Leader:</strong>
                        @if (@teamViewModel.TeamLeader != null)
                        {
                            @teamViewModel.TeamLeader.Email
                        }
                        </p>
                        <p class="card-text"><strong>Requirements:</strong> @teamViewModel.Team.Requirements</p>
                        <p class="card-text"><strong>Max Number of Members:</strong> @teamViewModel.Team.MaxNumOfMembers</p>
                        <a href="/teammember/list/@teamViewModel.Team.Id" class="btn btn-primary m-1">View Members</a>
                        <a href="/Team/Update/@teamViewModel.Team.Id" class="btn btn-success m-1">Update Team</a>
                        <a href="/Team/DeleteConfirm/@teamViewModel.Team.Id" class="btn btn-danger m-1">Delete Team</a>
                    </div>
                </div>
            </div>
        }
    </div>
}
else
{
    <p>No teams available for the specified Hackathon.</p>
}
